<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Digipost" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="colorPrimary">@color/dds_frokostkaffe</item>
        <item name="colorPrimaryDark">@color/dds_frokostkaffe</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_item_background</item>
        <item name="android:homeAsUpIndicator">@drawable/up_indicator</item>
        <item name="android:windowBackground">@drawable/application_window_background</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionModeBackground">@color/actionbar_multi_select_grey</item>
        <item name="android:textColorPrimary">@color/dds_sort_kaffe</item>
        <item name="android:textColor">@color/dds_sort_kaffe</item>
    </style>

    <style name="Digipost.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="deviceDefault" parent="">

    </style>

    <style name="Digipost.Dialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:fullDark">@color/edit_folder_background</item>
        <item name="android:topDark">@color/edit_folder_background</item>
        <item name="android:centerDark">@color/edit_folder_background</item>
        <item name="android:bottomDark">@color/edit_folder_background</item>
        <item name="android:topBright">@color/edit_folder_background</item>
        <item name="android:centerBright">@color/edit_folder_background</item>
        <item name="android:bottomBright">@color/edit_folder_background</item>
        <item name="android:bottomMedium">@color/edit_folder_background</item>
        <item name="android:centerMedium">@color/edit_folder_background</item>
    </style>
    
    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/SubtitleTextStyle</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_item_background</item>
        <item name="android:background">@color/dds_frokostkaffe</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
    </style>

    <style name="Digipost.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="Digipost.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TitleTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/actionbar_title_color</item>
    </style>

    <style name="SubtitleTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/actionbar_subtitle_color</item>
    </style>

    <style name="WhiteTextColor" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>`

    <style name="CheckBoxStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/checkbox_unchecked</item>
        <item name="colorControlActivated">@color/checkbox_checked</item>
    </style>

    <style name="DigipostBlackStatusbar" parent="Digipost">
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="Digipost.InfoText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/metadata_title</item>
        <!--
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        -->
    </style>

    <style name="Digipost.InfoTextTitle" parent="Digipost.InfoText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/metadata_text</item>
        <!-- <item name="android:layout_marginTop">20dp</item> -->
    </style>

    <style name="Digipost.DataTypeLinkButton">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/dds_bla_java</item>
    </style>

</resources>