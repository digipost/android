<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/invoice_background"
              android:weightSum="1">

    <include layout="@layout/toolbar"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="160dp"
            android:background="@color/white"
            android:layout_gravity="center"
            android:minHeight="120dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:gravity="center_vertical|center_horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invoice_options_title"
                android:id="@+id/invoice_options_title"
                android:textColor="@color/invoice_title"
                android:textSize="22sp"
                android:layout_marginTop="30dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invoice_options_subtitle"
                android:id="@+id/invoice_options_subtitle"
                android:minLines="2"
                android:textColor="@color/invoice_subtitle"
                android:textSize="16sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="30dp"/>
    </LinearLayout>
    <ListView
            android:id="@+id/invoice_options_banks_listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.55"
            android:background="@color/invoice_background">

    </ListView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/invoice_options_more_soon"
            android:id="@+id/invoice_options_more_soon"
            android:layout_gravity="top|left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="top|left"/>

</LinearLayout>
