<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/externallink_view"
              android:background="@color/white"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:paddingTop="25dp"
              android:paddingBottom="10dp"
              android:paddingLeft="25dp"
              android:paddingRight="25dp"
              android:layout_marginBottom="10dp"
              android:layout_height="wrap_content">
    <TextView
            android:id="@+id/externallink_title"
            android:text=""
            android:textSize="20sp"
            android:lineSpacingMultiplier="1.2"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textColor="@color/metadata_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />
        <TextView
                android:id="@+id/externallink_text"
                android:text=""
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/metadata_text"
        />

        <Button
                android:text="@string/externallink_open_link_text"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:id="@+id/externallink_open_link"
                android:background="@drawable/red_button_style"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAlignment="gravity"
                android:gravity="center"
                android:layout_height="50dp"
        />

        <TextView
                android:id="@+id/externallink_deadline"
                android:text=""
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="italic"
                android:textColor="@color/metadata_text"
        />
</LinearLayout>