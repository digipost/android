<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/content_list_item">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_content_listview_top_text"
            android:textSize="15dp"
            android:padding="8dp"
            android:visibility="gone"
            android:background="@color/login_background"
            android:gravity="center_horizontal"
            android:textColor="@color/white"/>
    <ListView
            android:id="@+id/fragment_content_listview"
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:divider="@color/list_divider"
            android:dividerHeight="@dimen/listview_dividerheight">
    </ListView>

    <LinearLayout
            android:orientation="vertical"
            android:id="@+id/fragment_content_list_no_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:visibility="gone"
            android:padding="@dimen/screenlock_view_padding">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_content_list_emptyview_title"
                android:textSize="25dp"
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:textColor="@color/black_subject"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_content_list_emptyview_text"
                android:textSize="17dp"
                android:textColor="@color/grey_filesize"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:id="@+id/fragment_content_list_emptyview_no_connection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:visibility="gone"

            android:padding="@dimen/screenlock_view_padding">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Ingen forbindelse"
                android:textSize="@dimen/screenlock_infotext_size"
                android:gravity="center_horizontal"
                android:textColor="@color/login_disclamer_registration_layout_background"/>


        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/screenlock_yes_button_style"
                android:text="PrÃ¸v igjen"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/screenlock_view_padding"
                android:textColor="@color/white"
                android:id="@+id/fragment_content_network_retry_button"/>

    </LinearLayout>
</LinearLayout>
