<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/listitem_super_layout_padding" >

    <CheckBox
        android:id="@+id/mailbox_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/listitem_sub_layout_padding" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mail_subject"
                android:layout_width="@dimen/listitem_mail_subject_width"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="@dimen/listitem_mail_subject_padding_right"
                android:singleLine="true"
                android:textColor="@color/black_subject"
                android:textSize="@dimen/listitem_mail_subject_textsize" />

            <TextView
                android:id="@+id/mail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_date"
                android:textSize="@dimen/listitem_mail_date_textsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mail_creator"
                android:layout_width="@dimen/listitem_mail_creator_width"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="@dimen/listitem_mail_creator_padding_right"
                android:singleLine="true"
                android:textColor="@color/grey_creator"
                android:textSize="@dimen/listitem_mail_creator_textsize" />

            <TextView
                android:id="@+id/mail_size_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="@dimen/listitem_mail_prize_padding_right"
                android:textSize="@dimen/listitem_mail_prize_textsize" />

            <ImageView
                android:id="@+id/document_locked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingTop="@dimen/listitem_mail_document_lock_padding_top"
                android:src="@drawable/list_padlock_grey_16"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>