<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_kitchen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/listview_kitchen"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/listview_height"
        android:layout_weight="@dimen/listview_weight"
        android:divider="@color/list_divider"
        android:dividerHeight="@dimen/listview_dividerheight" >
    </ListView>

    <LinearLayout
        android:id="@+id/empty_listview_workarea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/emptyslate_background"
        android:orientation="vertical"
        android:padding="@dimen/emptyslate_listview_padding"
        android:visibility="gone" >

        <ImageView
            android:layout_width="@dimen/emptyslate_image_size"
            android:layout_height="@dimen/emptyslate_image_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/emptyslate_marginTop"
            android:src="@drawable/fragment_folder_128" />

        <TextView
            android:id="@+id/workarea_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/emptyslate_text_linespacing"
            android:padding="@dimen/emptyslate_text_padding"
            android:text="@string/empty_listview_workarea"
            android:textColor="@color/emptyslate_text"
            android:textSize="@dimen/emptyslate_text_size"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/workarea_bottombar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottom_bar_background"
        android:gravity="bottom"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/workarea_bottombar_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/workarea_toArchive"
                android:layout_width="@dimen/bottombar_image_width"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/bottombar_image_weight"
                android:background="@color/transparent"
                android:paddingBottom="@dimen/bottombar_image_padding_bottom_and_top"
                android:paddingTop="@dimen/bottombar_image_padding_bottom_and_top"
                android:src="@drawable/white_archive_48" />

            <ImageButton
                android:id="@+id/workarea_delete"
                android:layout_width="@dimen/bottombar_image_width"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/bottombar_image_weight"
                android:background="@color/transparent"
                android:paddingBottom="@dimen/bottombar_image_padding_bottom_and_top"
                android:paddingTop="@dimen/bottombar_image_padding_bottom_and_top"
                android:src="@drawable/white_delete_48" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>