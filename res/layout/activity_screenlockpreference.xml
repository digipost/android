<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:weightSum="6"
              android:background="@color/login_background"
              android:layout_height="match_parent"
              android:padding="5dp"
        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sikkerhet"
            android:textSize="40dp"
            android:id="@+id/textView"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal|top"/>

    <LinearLayout
            android:id="@+id/screenlockactivity_yeslayout"
            android:orientation="vertical"
            android:layout_marginTop="40dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"

                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Enheten din har ikke skjermlås aktivert, for at applikasjonen forbli innlogget må skjermlås aktiveres."
                android:id="@+id/textView2"
                android:gravity="center"
                android:textSize="15dp"/>

        <Button

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/yes_apply_screenlock"
                android:id="@+id/screenlockactivity_yes_button"
                />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/screenlockactivity_nolayout"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Om du ønsker å benytte applikasjonen uten skjermlås blir du automatisk logget ut etter kort tid."
                android:id="@+id/textView4"
                android:gravity="center"
                android:textSize="15dp"
                />

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"

                android:text="@string/no_dont_use_screenlock"
                android:id="@+id/screenlockactivity_no_button"
                android:layout_gravity="center"/>
    </LinearLayout>


    <LinearLayout
            android:id="@+id/screenlockactivity_disclaimerlayout"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Viktig informasjon"
                android:id="@+id/textView5"
                android:textSize="15dp"
                android:gravity="center"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="For at applikasjonen skal glemme dette valget må du logge fra applikasjonen. Dette burde også gjøres om du velger å avinstallere applikasjonen."
                android:id="@+id/textView3"
                android:gravity="center"
                android:layout_gravity="bottom"/>
    </LinearLayout>

</LinearLayout>