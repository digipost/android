<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/listview_receipts"
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:divider="#eee"
        android:dividerHeight="1sp" >
    </ListView>

    <LinearLayout
        android:id="@+id/empty_listview_receipts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/empty_slate_background"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone" >

        <ImageView
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:src="@drawable/fragment_card_128" />

        <TextView
            android:id="@+id/receipts_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:padding="10dp"
            android:text="@string/empty_listview_receipts"
            android:textColor="@color/empty_slate_text"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/receipt_bottombar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottom_bar_background"
        android:gravity="bottom"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/receipt_bottombar_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/receipt_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@color/transparent"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:src="@drawable/white_delete_48" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>