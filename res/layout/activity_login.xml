<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_disclamer_registration_layout_background"
    tools:context=".LoginActivity"
        >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center|center_vertical|center_horizontal"
            >
        <ImageView
                android:id="@+id/login_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/login_header_logo_contentdescription"
                android:src="@drawable/postbox_white_medium"
                android:layout_above="@+id/login_content_layout"
                android:layout_centerInParent="true"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/login_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_above="@+id/login_disclaimer_layout"
        android:paddingLeft="@dimen/login_padding"
        android:paddingRight="@dimen/login_padding">



        <Button
            android:id="@+id/login_loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_loginbutton_style"
            android:text="@string/login_loginbutton_text"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/login_remember_me"
                android:id="@+id/login_remember_me"
                android:layout_gravity="center"
                android:checked="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_disclaimer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/login_registrationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/screenlock_no_button_style"
            android:text="@string/login_registrationbutton_text"
            android:textColor="@color/login_disclamer_registration_buttons_text_color_normal"
            android:textSize="@dimen/login_loginbutton_textsize" />

        <Button
            android:id="@+id/login_privacyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/screenlock_no_button_style"
            android:text="@string/login_privacybutton_text"
            android:textColor="@color/login_disclamer_registration_buttons_text_color_normal"
            android:textSize="@dimen/login_loginbutton_textsize"
            android:layout_marginTop="20dp"/>
    </LinearLayout>



</RelativeLayout>