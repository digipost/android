<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bottom_bar_background"
    tools:context=".LoginActivity" >

    <LinearLayout
        android:id="@+id/login_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/login_disclaimer_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/login_margin_bottom"
        android:background="@color/bottom_bar_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/login_padding" >

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="@dimen/login_logo_width"
            android:layout_height="@dimen/login_logo_height"
            android:layout_weight="@dimen/login_logo_weight"
            android:contentDescription="@string/login_header_logo_contentdescription"
            android:src="@drawable/postbox_white_medium" />

        <Button
            android:id="@+id/login_loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_loginbutton_margin_left_right_top"
            android:layout_marginRight="@dimen/login_loginbutton_margin_left_right_top"
            android:layout_marginTop="@dimen/login_loginbutton_margin_left_right_top"
            android:background="@drawable/login_loginbutton_style"
            android:drawableBottom="@color/login_loginbutton_drawablebottom"
            android:drawableLeft="@drawable/lock_white_35"
            android:drawablePadding="@dimen/login_loginbutton_paddingdrawable"
            android:paddingBottom="@dimen/login_loginbutton_padding_bottom_top"
            android:paddingLeft="@dimen/login_loginbutton_padding_left_right"
            android:paddingRight="@dimen/login_loginbutton_padding_left_right"
            android:paddingTop="@dimen/login_loginbutton_padding_bottom_top"
            android:text="@string/login_loginbutton_text"
            android:textColor="@color/white"
            android:textSize="@dimen/login_loginbutton_textsize"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_disclaimer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/disclamer_registration_layout_background"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/login_registrationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_disclaimer_registration_button_margin_bottom"
            android:layout_marginLeft="@dimen/login_disclaimer_registration_button_margin_left_right_top"
            android:layout_marginRight="@dimen/login_disclaimer_registration_button_margin_left_right_top"
            android:layout_marginTop="@dimen/login_disclaimer_registration_button_margin_left_right_top"
            android:background="@drawable/login_otherbuttons_style"
            android:padding="@dimen/login_disclaimer_registration_button_padding"
            android:text="@string/login_registrationbutton_text"
            android:textColor="@color/disclamer_registration_buttons_background"
            android:textSize="@dimen/login_loginbutton_textsize" />

        <Button
            android:id="@+id/login_privacyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_disclaimer_registration_button_margin_left_right_top"
            android:layout_marginLeft="@dimen/login_disclaimer_registration_button_margin_left_right_top"
            android:layout_marginRight="@dimen/login_disclaimer_registration_button_margin_left_right_top"
            android:layout_marginTop="@dimen/login_disclaimer_registration_button_margin_bottom"
            android:background="@drawable/login_otherbuttons_style"
            android:padding="@dimen/login_disclaimer_registration_button_padding"
            android:text="@string/login_privacybutton_text"
            android:textColor="@color/disclamer_registration_buttons_background"
            android:textSize="@dimen/login_loginbutton_textsize" />
    </LinearLayout>

</RelativeLayout>