<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/listview_archive"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="#eee"
        android:dividerHeight="1sp" >
    </ListView>

    <LinearLayout
        android:id="@+id/empty_listview_archive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BFBFBF"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone" >

        <ImageView
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:src="@drawable/fragment_folder_128" />

        <TextView
            android:id="@+id/archive_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/empty_listview_archive"
            android:textColor="#5E5E5E"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>
    
     <LinearLayout
        android:id="@+id/archive_bottombar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#323538"
        android:gravity="bottom"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/archive_bottombar_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/archive_toWorkarea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="#00000000"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:src="@drawable/white_workarea_48" />

            <ImageButton
                android:id="@+id/archive_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="#00000000"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:src="@drawable/white_delete_48" />
        </LinearLayout>
    </LinearLayout>
    

</LinearLayout>