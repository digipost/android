<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_red"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_red"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="2dp" >

        <ImageButton
            android:id="@+id/base_optionsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:contentDescription="Options button"
            android:padding="5dp"
            android:src="@drawable/base_optionbutton_style" />

        <ViewSwitcher
            android:id="@+id/base_topbar_switcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/base_logoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_weight="0.25"
                    android:background="@color/transparent"
                    android:contentDescription="options drawer logo"
                    android:padding="6dp"
                    android:src="@drawable/digipost_white_header_small" />

                <ProgressBar
                    android:id="@+id/base_refreshSpinner"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/base_refreshButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:contentDescription="Refresh button"
                    android:padding="5dp"
                    android:src="@drawable/base_refreshbutton_style" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/base_searchfield"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25" />

                <ImageButton
                    android:id="@+id/base_searchfield_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:padding="5dp"
                    android:src="@drawable/white_delete_48" />
            </LinearLayout>
        </ViewSwitcher>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFF" >

        <android.support.v4.view.PagerTitleStrip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/title_strip_background"
            android:padding="5dp"
            android:textSize="2dp" />
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/base_bottombar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottom_bar_background"
        android:gravity="bottom"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/base_bottombar_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/base_toWorkarea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@color/transparent"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:src="@drawable/white_workarea_48" />

            <ImageButton
                android:id="@+id/base_toArchive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@color/transparent"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:src="@drawable/white_archive_48" />

            <ImageButton
                android:id="@+id/base_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@color/transparent"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:src="@drawable/white_delete_48" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>