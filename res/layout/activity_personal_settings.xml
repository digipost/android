<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/screenlock_header_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="10dp"
                    android:paddingLeft="20dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pref_personal_settings_info_title"
                        android:textSize="17sp"
                        android:id="@+id/textView"
                        android:textColor="@color/white"
                        android:layout_gravity="top"
                        android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">

                    <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:gravity="right"
                            android:text="@string/pref_personal_settings_info_personalidentificationnumber"
                            android:textColor="@color/white"
                            android:layout_marginRight="10dp"/>

                    <TextView
                            android:id="@+id/personal_settings_personalidentificationnumberObfuscated"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">

                    <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:gravity="right"
                            android:text="@string/pref_personal_settings_info_full_name"
                            android:textColor="@color/white"
                            android:layout_marginRight="10dp"/>

                    <TextView
                            android:id="@+id/personal_settings_fullName"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">

                    <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:gravity="right"
                            android:text="@string/pref_personal_settings_info_address"
                            android:textColor="@color/white"
                            android:layout_marginRight="10dp"/>

                    <TextView
                            android:id="@+id/personal_settings_address"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">

                    <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:gravity="right"
                            android:text="@string/pref_personal_settings_info_phonenumber"
                            android:textColor="@color/white"
                            android:layout_marginRight="10dp"/>

                    <TextView
                            android:id="@+id/personal_settings_phonenumber"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">

                    <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:gravity="right"
                            android:text="@string/pref_personal_settings_info_email"
                            android:textColor="@color/white"
                            android:layout_marginRight="10dp"/>

                    <TextView
                            android:id="@+id/personal_settings_email"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">

                    <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:gravity="right"
                            android:text="@string/pref_personal_settings_info_digipost_address"
                            android:textColor="@color/white"
                            android:layout_marginRight="10dp"/>

                    <TextView
                            android:id="@+id/personal_settings_digipostaddress"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/screenlock_header_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="10dp"
                    android:paddingLeft="20dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pref_personal_settings_info_usage_title"
                        android:textSize="17sp"
                        android:id="@+id/textView"
                        android:textColor="@color/white"
                        android:layout_gravity="top"
                        android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="@string/pref_personal_settings_info_usage_subtitle"/>

                <CheckBox
                        android:id="@+id/personal_settings_acceptsInformation"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/pref_personal_settings_info_usage_accepts_info_title"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/screenlock_header_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="10dp"
                    android:paddingLeft="20dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pref_personal_settings_search_visibility_title"
                        android:textSize="17sp"
                        android:id="@+id/textView"
                        android:textColor="@color/white"
                        android:layout_gravity="top"
                        android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="@string/pref_personal_settings_search_visibility_accepts_subtitle"/>

                <CheckBox
                        android:id="@+id/personal_settings_visibleInSearch"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/pref_personal_settings_search_visibility_accepts_title"/>

            </LinearLayout>

            <Button
                    android:id="@+id/personal_settings_save"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_button_style"
                    android:text="@string/pref_personal_settings_button"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
