<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/main_drawer_dark_blue"/>
        </shape>
    </item>
    <item android:state_activated="true">
        <shape>
            <solid android:color="@color/main_drawer_blue_selected"/>
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/main_drawer_blue_focused"/>
        </shape>
    </item>
</selector>