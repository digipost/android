<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Digipost" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_item_background</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:homeAsUpIndicator">@drawable/up_indicator</item>

    </style>

    <style name="ActionBarStyle" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:icon">@drawable/actionbar_icon</item>
        <item name="android:background">@color/actionbar_red_background</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
    </style>

    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow</item>
    </style>

</resources>